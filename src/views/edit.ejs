<%- include("partials/header")%>
<!-- container -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 mx-auto">  
      <div class="card">
        <div class="card-header bg-primary">
          <h5 class="text-center">Register</h5>
        </div>
        <div class="card-body">
          <form action="/update/<%= data.id_customer %>" method="post">
            <div class="form-group">
              <input
                type="text"
                name="name"
                id="name"
                value="<%= data.name %>"
                class="form-control"
                autofocus
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="lastname"
                id="lastname"
                value="<%= data.lastname %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="email"
                name="email"
                id="email"
                value="<%= data.email %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="text"
                name="address"
                id="address"
                value="<%= data.address %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="number"
                name="phone"
                id="phone"
                value="<%= data.phone %>"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="submit"
                value="Save"
                class="btn btn-primary btn-block"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer") %>